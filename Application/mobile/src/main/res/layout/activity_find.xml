<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_theater"
    tools:context=".login.FindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/logotitle"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID/PW 찾기"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아래 항목을 빠짐없이 기입해주세요."
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginBottom="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp">
            </TextView>

            <EditText
                android:id="@+id/editName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_edittext"
                android:hint="이름을 입력하세요"
                android:padding="10dp"
                android:singleLine="true">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_edittext"
                android:hint="example@test.com"
                android:padding="10dp"
                android:singleLine="true"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"></TextView>

            <EditText
                android:id="@+id/editNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_edittext"
                android:hint="010-1234-5678"
                android:padding="10dp"
                android:singleLine="true"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="취소">
            </Button>

            <Button
                android:id="@+id/find_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="확인">
            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>